{
  "manifest_version": 3,
  "name": "Placeit Bulk Mockup Downloader (Prototype)",
  "version": "0.1.0",
  "description": "Bulk-opens Placeit mockups, injects uploaded design ID, clicks Download, and closes tabs (prototype).",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://placeit.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Placeit Bulk Mockup"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
